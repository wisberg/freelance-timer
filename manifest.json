{
  "manifest_version": 3,
  "name": "Freelance Timer",
  "description": "Track time spent working on client sites and export PDF reports.",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "history",
    "idle"
  ],
  "host_permissions": ["<all_urls>", "https://www.google.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-dark-16.png",
      "32": "icons/icon-dark-32.png",
      "48": "icons/icon-dark-48.png",
      "128": "icons/icon-dark-128.png"
    },
    "theme_icons": [
      {
        "light": "icons/icon-dark-16.png",
        "dark": "icons/icon-light-16.png",
        "size": 16
      },
      {
        "light": "icons/icon-dark-32.png",
        "dark": "icons/icon-light-32.png",
        "size": 32
      },
      {
        "light": "icons/icon-dark-48.png",
        "dark": "icons/icon-light-48.png",
        "size": 48
      },
      {
        "light": "icons/icon-dark-128.png",
        "dark": "icons/icon-light-128.png",
        "size": 128
      }
    ]
  },
  "icons": {
    "16": "icons/icon-dark-16.png",
    "32": "icons/icon-dark-32.png",
    "48": "icons/icon-dark-48.png",
    "128": "icons/icon-dark-128.png"
  },
  "options_page": "popup.html"
}
